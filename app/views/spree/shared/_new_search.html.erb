<%= form_tag spree.products_path, method: :get do %>
<div class="search-container">
    <input 
      type="submit">
      <%= search_field_tag :keywords,
      params[:keywords],
      placeholder: Spree.t(:search),
      autofocus: true
      %>
    </input>
    <div class="search"></div>
</div>
<% end %>

